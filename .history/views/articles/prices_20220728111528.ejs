<%- include('../partials/header') %>

<br>
<h1>You are now viewing the most up to date cryptocurrencies on the market</h1>

<table class="table table-striped table-dark justify-content-center">
  <thead>
    <tr>
      
      <th class="text-center" scope="col">Rank</th>
      <th class="text-center" scope="col">Name</th>
      <th class="text-center" scope="col">Symbol</th>
      <th class="text-center" scope="col">USD Price</th>
      <th class="text-center" scope="col">BTC Price</th>
      <th class="text-center" scope="col">24H Change</th>
    </tr>
  </thead>
  <tbody>

  <% cryptos.forEach(x => { %>
      <tr>
      <td class="text-center"> <%= x.rank %></td>
      <td class="text-center"> <%= x.name %></td>
      <td class="text-center"> <%= x.symbol %></td>
      <td class="text-center"> <%= x.price_usd %></td>
      <td class="text-center"> <%= x.price_btc %></td>
      <td class="text-center"> <%= x.percent_change_24h %></td>
    </tr>
      <% })  %>
      
  </tbody>
  </table>


